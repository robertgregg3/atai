{
  "compilerOptions": {
    "types": ["vitest"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks"],
      "@images/*": ["src/images/*"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"],
      "@context/*": ["src/context/*"],
      "@charts/*": ["src/components/charts/*"]
    },
    "target": "esnext",
    "module": "esnext", // Set this to "esnext" or "es2020"
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true
  },
  "include": ["src"],
}
